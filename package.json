{
  "name": "express-restful-api",
  "version": "1.0.0",
  "description": "Express RESTful services",
  "main": "dist/server.js",
  "scripts": {
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "prebuild": "npm run lint",
    "build": "rm -rf ./dist && tsc",
    "postbuild": "npm test",
    "build:watch": "tsc -w",
    "prestart": "npm run build",
    "start": "npm run serve",
    "serve": "node .",
    "serve:watch": "nodemon",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "e2e": "env TS_NODE_FILES=true mocha -r ts-node/register e2e/**/*.spec.ts"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "env": {
      "NODE_ENV": "development",
      "PORT": 8080
    },
    "exec": "npm run build && npm run serve",
    "ext": "ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guillermocorrea/express-restful-api.git"
  },
  "keywords": [
    "express",
    "rest"
  ],
  "author": "Luis Correa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guillermocorrea/express-restful-api/issues"
  },
  "homepage": "https://github.com/guillermocorrea/express-restful-api#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.4",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.7.8",
    "@types/node": "^13.11.0",
    "@types/should": "^13.0.0",
    "@types/sinon": "^9.0.0",
    "@types/supertest": "^2.0.8",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.2",
    "should": "^13.2.3",
    "sinon": "^9.0.1",
    "supertest": "^4.0.2",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  }
}
